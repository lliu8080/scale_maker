        - /usr/bin/stress-ng
        - {{ .commandParams }}
      livenessProbe:
        exec:
          command:
          - /bin/true
      readinessProbe:
        exec:
          command:
          - /bin/true
      resources:
        requests:
          cpu: 50m
          memory: 50Mi
      securityContext: {}