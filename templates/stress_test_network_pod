apiVersion: v1
kind: Pod
metadata:
  labels:
    stress-test-label: {{ .testLabel }}
  name: stress-test-pod-{{ .instanceName }}
  namespace: {{ .namespace }}
spec:
  containers:
    - name: iperf-test
      image: {{ .image }}:{{ .imageTag }}
      command: ["/bin/bash"]
      args: ["-c", "iperf {{ .commandParams }}"]
      livenessProbe:
        exec:
          command:
          - /bin/true
      readinessProbe:
        exec:
          command:
          - /bin/true
      resources:
        requests:
          cpu: "{{ .cpuRequest }}"
          memory: "{{ .memoryRequest }}"
        limits:
          cpu: "{{ .cpuLimit }}"
          memory: "{{ .memoryLimit }}"
      securityContext: {}
  restartPolicy: Never
